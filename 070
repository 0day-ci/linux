# creator
owner=nathans@sgi.com

seq=`basename $0`
echo "QA output created by $seq"

here=`pwd`
tmp=/tmp/$$
status=1	# failure is the default!
trap "rm -f $tmp.*; exit \$status" 0 1 2 3 15

# get standard environment, filters and checks
. ./common.rc
. ./common.filter

# real QA test starts here

$here/src/fsstress \
	-d $TEST_MNT/fsstress \
	-f allocsp=0 \
	-f freesp=0 \
	-f bulkstat=0 \
	-f bulkstat1=0 \
	-f resvsp=0 \
	-f unresvsp=0 \
	-f attr_set=100 \
	-f attr_remove=100 \
	-S -p 1 -n 10000

status=$?
exit
